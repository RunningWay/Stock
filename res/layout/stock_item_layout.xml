<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/id_view_companyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="嘉化能源"
            android:textColor="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_view_daystartprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stock_dayStartPrice"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/id_view_currentprice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="@string/stock_currentPrice"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/id_view_yesterdayendprice_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="@string/stock_yesterdayEndPrice"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/id_view_dayhighprice_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stock_dayHighPrice"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/id_view_daylowprice_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="@string/stock_dayLowPrice"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/id_view_daynum_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:text="@string/stock_num"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/unread"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#00DB00"
        android:gravity="center"
        android:text="提醒" />

    <TextView
        android:id="@+id/delete"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@color/red"
        android:gravity="center"
        android:text="删除" />

</LinearLayout>